 prob 2) Move Files From one folder to the respective folders.
#! /bin/bash

for file in `ls *.txt`;
do
    folderName=`echo $file | awk -F. '{print $1}'`;
    if [ -d  $folderName ]
    then
        rm -r $folderName;
    fi
    #echo creating folder ${folderName};
    mkdir $folderName;
    #echo copying ${file} to ${folderName};
    cp $file $folderName;
    echo "files created";
done


